@model hackaton.Models.User
@using VM = hackaton.Models.ViewModels

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/sharedStyles.css" type="text/css" />
</head>

@*Header*@
<partial name="~/Views/Modules/partial_header.cshtml" model='new VM.VM_header { HeaderVariation=VM.VM_header.Variations.Login}' />

<div class="main_container">

    <div class="main_card signup">

        <div class="content">
            <form asp-action="Register" style="min-width:100%">
            @Html.AntiForgeryToken()
            <div class="leading-generic">
                <partial name="~/Views/Modules/partial-logo-nameonly-vector.cshtml" />
                <div class="heading">
                    <span>Crie sua conta</span>
                </div>
                <div class="detail">
                    <span>Comece a desfrutar de nossos serviços!</span>
                </div>
            </div>
            <div class="trailing">
                <div class="inputs">

                    <div asp-validation-summary="ModelOnly" class="detail text-danger-override"></div>

                    <partial name="~/Views/Modules/partial_textbox_name.cshtml" model='new VM.VM_textbox { User = Model}' />

                    <partial name="~/Views/Modules/partial_textbox_cpf.cshtml" model='new VM.VM_textbox { User = Model}' />

                    <partial name="~/Views/Modules/partial_textbox_password.cshtml" model='new VM.VM_textbox {User = Model}' />


