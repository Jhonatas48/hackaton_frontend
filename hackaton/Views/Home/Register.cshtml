                        </div>
                        <span asp-validation-for="" class="detail text-danger-override"></span>
                    </div*@

                    <div class="actions">
                        <div class="form-group" style="min-width:100%">
                            <partial name="~/Views/Modules/partial_submit_button.cshtml"
                                         model='new hackaton.Models.ViewModels.VM_button { Class="btn btn-primary btn-override primary-color-override", Value="Registrar"}' />
                        </div>
                    </div>
                </div>
            </div>
            </form>
        </div>

    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<script src="/js/module-textbox-focus.js"></script>
<script src="/js/module-password-eye-visibility.js"></script>
<script src="/js/module-cpf-verification.js"></script>
<script src="/js/module-home-hover.js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

