@model frontend_hackaton.Models.Schedule
@using VM = hackaton.Models.ViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers

<div class="main_card half-card">
    <form asp-action="Create" method="post">
        <span class="heading" id="new-schedule">Novo Agendamento</span>

        <div class="all-form-items-wrapper">

            <div class="start-end-date-wrapper">
                <div class="title-input-wrapper">
                    <span class="heading">Data de início</span>
                    <div class="input env min-w200 w100" data-cluster="btn1">
                        <input class="textbox" value="@DateTime.Now.Date" asp-for="DataInicial">
                    </div>
                    <span asp-validation-for="DataInicial" class="detail text-danger-override"></span>
                </div>

                <div class="title-input-wrapper">
                    <span class="heading">Data de término</span>
                    <div class="input env min-w200 w100" data-cluster="btn1">
                        <input class="textbox" value="@DateTime.Now.Date" asp-for="DataFinal">
                    </div>
                    <span asp-validation-for="DataFinal" class="detail text-danger-override"></span>
                </div>


            </div>

            <div class="form-group">

                <div class="field-wrapper">
                    <span class="heading">Descrição</span>
                    <div class="input env w100" id="description-input" data-cluster="btn1">
                        <input class="textbox" placeholder="..." asp-for="Description">
                    </div>
                    <span asp-validation-for="Description" class="detail text-danger-override"></span>
                </div>

                <div class="savebutton-wrapper">
                    <input class="btn btn-primary btn-override primary-color-override" type="submit" value="Salvar" id="schedule-save">
                </div>

            </div>
        </div>
        

            

           
        
        
